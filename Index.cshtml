@model IEnumerable<OnlineStoreFurniture.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Create New Category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = item.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "Category", new { id = item.Id })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

