@model IEnumerable<OnlineStoreFurniture.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = item.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

