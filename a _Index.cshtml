@model IEnumerable<OnlineStoreFurniture.Models.orderItem>

@{
    ViewData["Title"] = "Order Items List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderItem in Model)
        {
            <tr>
                <td>@orderItem.OrderId</td>
                <td>@orderItem.Product.Name</td>
                <td>@orderItem.Quantity</td>
                <td>@orderItem.Price</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = orderItem.Id })">Edit</a> |
                    <a href="@Url.Action("Details", new { id = orderItem.Id })">Details</a> |
                    <a href="@Url.Action("Delete", new { id = orderItem.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")">Create New Order Item</a>
